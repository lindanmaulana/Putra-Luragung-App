<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SuccessSignup">

    <ImageView
        android:id="@+id/imageSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/success_icon"/>
    <TextView
        android:id="@+id/titleSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="14dp"/>
    <TextView
        android:id="@+id/descSuccess"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/bg_primary"
        android:text="We've sent you a verification email, please check your inbox and follow the instructions to verify your account."
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/expressionSuccess"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/bg_primary"
        android:text="Thank you for signing up with us!"
        />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:id="@+id/actionToSigninSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in here"
        android:textAllCaps="false"
        android:textColor="@color/bg_primary"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
</LinearLayout>