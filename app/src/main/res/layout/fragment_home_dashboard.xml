<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    tools:context=".DashboardHomeFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/containerDashboardHeader"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    app:cardBackgroundColor="@color/bg_primary"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toTopOf="@id/container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:shapeAppearanceOverlay="@style/BottomRoundedCornerCard">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/dashboardHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/actionMenu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:icon="@drawable/hamburger_icon"
                            app:backgroundTint="@color/bg_primary"
                            app:iconSize="40dp"/>

                        <TextView
                            android:id="@+id/dashboardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kemana Kamu Ingin Pergi"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/containerDashboardHeaderCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="80dp"

                    app:layout_constraintTop_toTopOf="@id/containerDashboardHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:cardElevation="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/dashboardHeaderCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">
                        <LinearLayout
                            android:id="@+id/headerCardLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="@id/dashboardHeaderCard"
                            app:layout_constraintEnd_toEndOf="@id/dashboardHeaderCard"
                            app:layout_constraintTop_toTopOf="@id/dashboardHeaderCard">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:orientation="vertical"
                                android:layout_gravity="center">
                                <LinearLayout
                                    android:id="@+id/inBusHeader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_marginBottom="4dp">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/inBusHeaderCard"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        app:srcCompat="@drawable/exit_bus_icon"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Dari"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/gray"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginLeft="10dp" />
                                </LinearLayout>

                                <View
                                    android:id="@+id/separatorLine"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="@color/black"

                                    android:layout_marginTop="8dp" />

                                <LinearLayout
                                    android:id="@+id/exitBusHeader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_marginTop="8dp">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/exitBusHeaderCard"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        app:srcCompat="@drawable/in_bus_icon"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Menuju"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/gray"
                                        android:layout_marginLeft="10dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/sortHeaderCard"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/sort_vertical_icon"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/headerCardInformation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Keberangkatan"
                            android:textSize="18sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@id/dashboardHeaderCard"
                            app:layout_constraintTop_toBottomOf="@id/headerCardLocation"/>

                        <LinearLayout
                            android:id="@+id/headerCardCalendar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"

                            app:layout_constraintStart_toStartOf="@id/dashboardHeaderCard"
                            app:layout_constraintTop_toBottomOf="@id/headerCardInformation"
                            >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="start|center_vertical"
                                >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal"
                                    android:padding="4dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:background="@drawable/circle_blue"
                                        android:paddingHorizontal="10dp"
                                        android:paddingVertical="4dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SEN"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="2dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal"
                                    android:padding="4dp"
                                    android:layout_marginStart="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2"
                                        android:textSize="18sp"
                                        android:textColor="@color/black"
                                        android:paddingHorizontal="10dp"
                                        android:paddingVertical="4dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SEL"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="2dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal"
                                    android:padding="4dp"
                                    android:layout_marginStart="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="3"
                                        android:textSize="18sp"
                                        android:textColor="@color/black"
                                        android:paddingHorizontal="10dp"
                                        android:paddingVertical="4dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="RAB"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="2dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal"
                                    android:padding="4dp"
                                    android:layout_marginStart="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4"
                                        android:textSize="18sp"
                                        android:textColor="@color/black"
                                        android:paddingHorizontal="10dp"
                                        android:paddingVertical="4dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="KAM"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="2dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/black"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="APR"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2024"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray" />

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/actionSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:text="Cari Jenis Bus"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/containerDashboardHeaderCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:backgroundTint="@color/bg_primary"
                    app:icon="@drawable/search_icon"
                    app:iconGravity="textStart"/>

                <LinearLayout
                    android:id="@+id/containerDashboardMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="30dp"
                    app:layout_constraintTop_toBottomOf="@id/actionSearch"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beli Tiket / Bayar Tiket"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tiket Bus"
                            android:textColor="@color/black"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@color/white"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/gray_opacity_50"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ticket_icon"
                            app:iconGravity="textStart"
                            app:iconTint="@null"
                            app:iconSize="24dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bayar Tiket"
                            android:textColor="@color/black"
                            app:backgroundTint="@color/white"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/gray_opacity_50"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ticket_pass_icon"
                            app:iconGravity="textStart"
                            app:iconTint="@null"
                            app:iconSize="24dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerDashboardNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/containerDashboardMenu"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pencarian Terbaru"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:id="@+id/actionToAllInvoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textAllCaps="false"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/bg_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/icon_history"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/history_icon"
                                android:contentDescription="History"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_tujuan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dari - Menuju"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray"/>

                                <TextView
                                    android:id="@+id/text_rute"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kota Kuningan - Jakarta"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/gray_opacity_50"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@id/icon_history"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/history_icon"
                                android:contentDescription="History"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/text_tujuan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dari - Menuju"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray"/>

                                <TextView
                                    android:id="@id/text_rute"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kota Jakarta - Kuningan"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/gray_opacity_50"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@id/icon_history"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/history_icon"
                                android:contentDescription="History"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/text_tujuan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dari - Menuju"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray"/>

                                <TextView
                                    android:id="@id/text_rute"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kota Kuningan - Depok"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerDashboardPopularBus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/containerDashboardNew"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bus Popular"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:id="@+id/actionToAllBus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textAllCaps="false"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/bg_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/bus_pratama"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SHD - Ekonomi"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/bus_bintang_malam"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SHD - Ekonomi"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/bus_patas"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SHD - Ekonomi"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>