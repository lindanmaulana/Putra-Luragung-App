<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue_white"
    tools:context=".BusDetailActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageBus"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bus_sataro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-40dp"
        app:layout_constraintTop_toBottomOf="@id/imageBus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/bg_primary"
        app:cardElevation="8dp"
        app:shapeAppearanceOverlay="@style/TopRoundedCornerCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/textBusName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Bus Harapan Jaya Executive"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/textBusPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp 180.000"
                android:textSize="14sp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="6dp"
                android:background="@drawable/badge_bg"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/textBusName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp" />

            <LinearLayout
                android:id="@+id/layoutBusRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/textBusPrice"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/iconRoute"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/location_icon"
                    app:tint="@color/white"
                    android:contentDescription="Route Icon"/>

                <TextView
                    android:id="@+id/textBusRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Jakarta - Surabaya (Via Pantura)"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFacilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/layoutBusRoute"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/iconFacility"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/chair_seat_icon"
                    app:tint="@color/white"
                    android:contentDescription="Facility Icon"/>

                <TextView
                    android:id="@+id/facilityBus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Executive Class | 2-2 Seater | AC"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/actionBookingTicket"
                    style="@style/btnPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:strokeColor="@color/white"
                    android:text="Pesan Tiket Sekarang" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/actionBack"
                    style="@style/btnPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/transparent"
                    app:strokeColor="@color/white"
                    android:textColor="@color/white"
                    android:text="Kembali" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>