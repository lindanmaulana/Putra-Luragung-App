<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PutraLuragungTrans" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="statusBarBackground">@color/bg_primary</item>
    </style>

    <style name="Theme.PutraLuragungTrans" parent="Base.Theme.PutraLuragungTrans" />

    <style name="CustomContainerWhite" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/white_edit_text</item>
        <item name="android:textColorHint">#D7B0BEC5</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="minHeight">50dp</item>
    </style>

    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/white_edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#D7B0BEC5</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="minHeight">50dp</item>
    </style>

    <style name="TopRoundedCornerCard" parent="">
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>

        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="BottomRoundedCornerCard" parent="">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>

        <item name="cornerSizeBottomLeft">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
    </style>

    <style name="btnAuth" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>